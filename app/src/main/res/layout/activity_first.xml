<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/kau_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_logo" />

    <TextView
        android:id="@+id/kau_exam_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kau_logo"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/poppins_regular"
        android:text="KAU Exam Attendance"
        android:textAlignment="center"
        android:textColor="@color/text_black_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/btTeacher"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/kau_exam_txt"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_back_white"
        android:fontFamily="@font/poppins_medium"
        android:text="Teacher"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btStudent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btTeacher"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_back_white"
        android:text="Student"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btExit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btStudent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_back_colored"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:text="Exit"
        android:textColor="@color/white" />




</RelativeLayout>