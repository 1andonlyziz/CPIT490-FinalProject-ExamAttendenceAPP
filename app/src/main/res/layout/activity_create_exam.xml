<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateExamActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"

        android:background="@drawable/gradient_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_back"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:text="Create Exam"
                android:textAlignment="center"
                android:textColor="@color/background_white"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/exam_img"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_exam" />

    <EditText
        android:id="@+id/etCourse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/exam_img"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_custom"
        android:drawableStart="@drawable/ic_baseline_class_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Course Code"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/etRoom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etCourse"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_custom"
        android:drawableStart="@drawable/ic_baseline_room_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Room No"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etRoom"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_custom"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Exam Date"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etDate"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_custom"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Exam Time"
        android:inputType="time"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btExamCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etTime"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_custom"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/poppins_bold"
        android:text="Create"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>